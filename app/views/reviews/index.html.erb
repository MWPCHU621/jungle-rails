<h1>Listing reviews</h1>

<table>
  <tr>
    <th>Product</th>
    <th>User</th>
    <th>Description</th>
    <th>Rating</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reviews.each do |review| %>
  <tr>
    <td><%= review.product_id %></td>
    <td><%= review.user_id %></td>
    <td><%= review.description %></td>
    <td><%= review.rating %></td>
    <td><%= link_to 'Show', [review.products, review] %></td>
    <td><%= link_to 'Edit', edit_products_review_path(review.products, review) %></td>
    <td><%= link_to 'Destroy', [review.products, review], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Review', new_products_review_path(params[:products_id]) %>
